        <StackPanel Orientation="Horizontal">
            <Button Content="schoonmeersen image"></Button>
            <Button Content="Campus schoonmeersen"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Ledeganck image"></Button>
            <Button Content="Campus Ledeganck"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Ledeganck image"></Button>
            <Button Content="Campus Ledeganck"></Button>
        </StackPanel>
    </StackPanel>-->
</Page>
