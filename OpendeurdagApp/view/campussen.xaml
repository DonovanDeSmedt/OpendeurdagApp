<Page
    x:Class="OpendeurdagApp.view.campussen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpendeurdagApp.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ImgSchoonmeersen" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160" Width="180" >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/schoonmeersen.jpg"/>
            </Button.Background>
        </Button>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Campus schoonmeersen"></TextBlock>
            <TextBlock Text="Hoofdcampus HoGent"></TextBlock>
            <TextBlock Text="richtingen"></TextBlock>
        </StackPanel>
        <Button x:Name="ImgMercator" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160" Width="180" >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/mercator.jpg"/>
            </Button.Background>
        </Button>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
            <TextBlock Text="Campus Mercator"></TextBlock>
            <TextBlock Text="Gelegen in Gent"></TextBlock>
            <TextBlock Text="richtingen"></TextBlock>
        </StackPanel>
        <Button x:Name="ImgAalst" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160" Width="180" >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/aalst.jpg"/>
            </Button.Background>
        </Button>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2">
            <TextBlock Text="Campus Aalst"></TextBlock>
            <TextBlock Text="Gelegen in Aalst"></TextBlock>
            <TextBlock Text="richtingen"></TextBlock>
        </StackPanel>
        <Button x:Name="ImgLedeganck" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="160" Width="180" >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/ledeganck.jpg"/>
            </Button.Background>
        </Button>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="3">
            <TextBlock Text="Campus Ledganck"></TextBlock>
            <TextBlock Text="Gelegen in Gent"></TextBlock>
            <TextBlock Text="richtingen"></TextBlock>
        </StackPanel>
    </Grid>
